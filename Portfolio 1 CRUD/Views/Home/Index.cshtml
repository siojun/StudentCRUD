@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">

    <div class="text-center mb-5">
        <h1 class="fw-bold">Student Management System</h1>
        <p class="text-muted">Manage students, courses, and enrollments easily.</p>
    </div>

    <div class="row g-4">

        <div class="col-md-4">
            <a asp-controller="Student" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100 home-card">
                    <div class="card-body text-center">
                        <i class="bi bi-people display-4 text-primary"></i>
                        <h4 class="mt-3">Students</h4>
                        <p class="text-muted small">View, add, and manage student records.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a asp-controller="Course" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100 home-card">
                    <div class="card-body text-center">
                        <i class="bi bi-journal-bookmark display-4 text-success"></i>
                        <h4 class="mt-3">Courses</h4>
                        <p class="text-muted small">Manage course information.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a asp-controller="Home" asp-action="About" class="text-decoration-none">
                <div class="card shadow-sm h-100 home-card">
                    <div class="card-body text-center">
                        <i class="bi bi-info-circle display-4 text-secondary"></i>
                        <h4 class="mt-3">About</h4>
                        <p class="text-muted small">Learn about this project.</p>
                    </div>
                </div>
            </a>
        </div>


    </div>

</div>

<style>
    .home-card {
        transition: all 0.25s ease;
        border-radius: 10px;
    }

        .home-card:hover {
            background-color: #f0f4ff; /* light blue */
            transform: translateY(-5px); /* slight lift on hover */
        }

            .home-card:hover i {
                color: #0d6efd !important; /* Bootstrap primary color */
            }

</style>